<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opinion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mark)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opinion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mark)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>

        }
        <form action="#" method="post">
      
            <p>
                <label for="name" hidden>Name</label>
                <input name="name" id="name" type="text" required="" hidden>
            </p>
            <p>
                <label for="email" hidden>E-mail</label>
                <input name="email" id="email" type="email" required="" hidden>
            </p>
            <p>
                <label for="website" hidden></label>
                <input name="website" id="website" type="url" hidden>
            </p>
            <p>
                <label for="comment" hidden></label>
                <textarea name="comment" id="comment" required="" hidden></textarea>
            </p>
            <p><input type="submit" hidden></p>
        </form>
    </tbody>



</table>
