@model Hogwarts.Models.Comments
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
}


@* canvas *@
<html>
<body>

   
    <img id="scream" src="http://albums.timg.co.il/userFolders/52/763799/medium/862342.jpg?time=0" alt="The Scream" width="220" height="277">



    <script>
        function myCanvas() {
            var c = document.getElementById("myCanvas");
