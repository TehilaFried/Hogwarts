@model IEnumerable<Hogwarts.Models.Orders>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
}

<script>
    var storage = localStorage.getItem('shoppingCart');
</script>

<h2 class="title">Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumOfTickets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @*item.count*@
                    @Html.DisplayFor(modelItem => item.NumOfTickets)
                </td>
                <td>
                    @*item.price * item.count*@
                    @Html.DisplayFor(modelItem => item.TotalCost)
                </td>
                <td>
                    @*`${item.date.getDate()}/${item.date.getMonth()}/${item.date.getFullYear()} ${item.date.getHours()}:${item.date.getMinutes()}`*@
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
         }
    </tbody>
</table>
